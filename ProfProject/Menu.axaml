<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProfProject.Menu"
        Title="Menu" Background="Bisque" Width="400" Height="700">
        <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="35">Добро пожаловать!</TextBlock> 
                <TextBlock HorizontalAlignment="Center" FontSize="20">Альметьевский завод "Электроприбор"</TextBlock>
                <TextBlock HorizontalAlignment="Center" FontSize="30">Меню</TextBlock>
                <Button x:Name="docbtn" Width="350" Height="50" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="dockClicked">Документооборот</Button>
                <Button x:Name="rabbtn" Width="350" Height="50" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="rabClicked">Рабочий график</Button>
                <Button x:Name="lernbtn" Width="350" Height="50" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="lernClicked">Обучение</Button>
                <Button x:Name="regtimebtn" Width="350" Height="50" FontSize="25"  HorizontalAlignment="Center" VerticalAlignment="Center" Click="regClicked">Начать/закончить смену</Button>
                <Button x:Name="tehbtn" Width="350" Height="50" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="tehClicked">Техническая поддержка</Button>
        </StackPanel>
   
</Window>
